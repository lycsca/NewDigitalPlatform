<local:ComponentBase x:Class="NewDigitalPlatform.Components.RAJoints"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewDigitalPlatform.Components"
             mc:Ignorable="d"   x:Name="root"
             d:DesignHeight="40" d:DesignWidth="40">
    <UserControl.Effect>
        <DropShadowEffect BlurRadius="5" Color="#EEE" Opacity="0.1" ShadowDepth="0"/>
    </UserControl.Effect>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="b2v"/>

        <Style TargetType="Button" x:Key="DeleteButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#55000000" Name="root" CornerRadius="11">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#88000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid Margin="2" RenderTransformOrigin="0.5,0.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#16a1ff" Offset="0"/>
                        <GradientStop Color="#5EBFFF" Offset="0.5"/>
                        <GradientStop Color="#16a1ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Border Grid.RowSpan="2" Grid.Column="3" Grid.Row="2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#16a1ff" Offset="0"/>
                        <GradientStop Color="#5EBFFF" Offset="0.4"/>
                        <GradientStop Color="#16a1ff" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Path Data="M0 5,0 0A5 5 0 0 1 5 5z" Grid.Column="3" Grid.Row="1" Stretch="Fill">
                <Path.Fill>
                    <RadialGradientBrush Center="0,1" GradientOrigin="0,1" RadiusX="1"  RadiusY="1">
                        <GradientStop Color="#16a1ff" Offset="0"/>
                        <GradientStop Color="#5EBFFF" Offset="0.5"/>
                        <GradientStop Color="#16a1ff" Offset="1"/>
                    </RadialGradientBrush>
                </Path.Fill>
            </Path>

            <Border Background="#BBB" CornerRadius="2" Grid.RowSpan="3"/>
            <Border Background="#BBB" CornerRadius="2" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3"/>


            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding RotateAngle,RelativeSource={RelativeSource AncestorType=local:ComponentBase}}"/>
            </Grid.RenderTransform>
        </Grid>

        <!--Anchor-->
        <Grid Visibility="{Binding IsSelected,Converter={StaticResource b2v}, ElementName=root}">
            <Rectangle Stroke="#AAA" StrokeDashArray="3,3" RadiusX="3" RadiusY="3"/>
            <Ellipse Width="10" Height="10" Fill="White" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                 Stroke="#AAA" Margin="-5" Cursor="SizeNWSE" 
                     MouseLeftButtonDown="Ellipse_MouseLeftButtonDown"
                     MouseMove="Ellipse_MouseMove"
                     MouseLeftButtonUp="Ellipse_MouseLeftButtonUp"/>
        </Grid>

        <Button Margin="0,0,-25,0" 
                Visibility="{Binding IsSelected,Converter={StaticResource b2v}, ElementName=root}" 
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Style="{StaticResource DeleteButtonStyle}" Height="22" Width="22"
                Click="Button_Click">
            <Grid Width="12" Height="12">
                <Path Data="M0 0 10 10M10 0 0 10" Stroke="Red" StrokeThickness="1" Stretch="Fill"/>
            </Grid>
        </Button>
    </Grid>
</local:ComponentBase>
